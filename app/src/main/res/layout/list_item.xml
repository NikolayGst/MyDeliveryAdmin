<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="5dp"
    android:layout_marginLeft="8dp"
    android:layout_marginRight="8dp"
    android:layout_marginTop="5dp"
    android:orientation="vertical">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp">

            <ImageView
                android:id="@+id/delete"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:src="@mipmap/ic_delete"
                android:layout_alignParentTop="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true" />

            <TextView
                android:id="@+id/jobsId"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="3dp"
                android:text="Номер задания:"
                android:textColor="@color/dark"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/jobsId"
                android:layout_marginBottom="3dp"
                android:text="ФИО заказчика:"
                android:textColor="@color/dark"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/telephone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/name"
                android:layout_marginBottom="3dp"
                android:text="Номер телефона:"
                android:textColor="@color/dark"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/pickFrom"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/telephone"
                android:layout_marginBottom="3dp"
                android:text="Откуда забрать:"
                android:textColor="@color/dark"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/address"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/pickFrom"
                android:layout_marginBottom="3dp"
                android:text="Адрес получателя:"
                android:textColor="@color/dark"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/description"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/address"
                android:layout_marginBottom="3dp"
                android:text="Описание товара:"
                android:textColor="@color/dark"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/price"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/description"
                android:layout_marginBottom="3dp"
                android:text="Цена товара:"
                android:textColor="@color/dark"
                android:textSize="15sp" />
            <TextView
                android:id="@+id/note"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/price"
                android:layout_marginBottom="3dp"
                android:text="Примечание:"
                android:textColor="@color/dark"
                android:textSize="15sp" />
            <TextView
                android:id="@+id/date"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/note"
                android:layout_marginBottom="3dp"
                android:text="Дата доставки:"
                android:textColor="@color/dark"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/userId"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/date"
                android:layout_marginBottom="3dp"
                android:text="Номер курьера:"
                android:textColor="@color/dark"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/status"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/userId"
                android:layout_marginBottom="3dp"
                android:text="Статус:"
                android:textColor="@color/dark"
                android:textSize="15sp"/>

            <TextView
                android:id="@+id/statusText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/status"
                android:layout_marginBottom="3dp"
                android:text=""
                android:textColor="@color/dark"
                android:textSize="15sp" />
        </RelativeLayout>
    </android.support.v7.widget.CardView>
</LinearLayout>